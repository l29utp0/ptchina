extends ../layout.pug
include ../mixins/boardtable.pug

block head
	title #{meta.siteName}

block content
	//h1.board-title #{meta.siteName}
	img.logo(src='/misc/martatacos.png' title='Um redes√≠tio de desenhos animados.')
	.table-container.flex-center.mv-10.text-center
	
		table
			tr
