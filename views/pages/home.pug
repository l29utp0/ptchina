	if hotThreads && hotThreads.length > 0
		.table-container.flex-center.mv-10
			table#hotposts
				tr(colspan=3) 
				each post, i in hotThreads
					tr.catalog-tile(style='height:100px' data-email=post.email)
						td.text-center
