if bans.length === 0
	p Sem bans.
else
	input(type='hidden' name='_csrf' value=csrf)
	include ../includes/bantable.pug
		for ban in bans
			+ban(ban)
	.action-wrapper.mv-10
		.row
			.label Remover Ban
			label.postform-style.ph-5
				input(type='radio' name='option' value='unban' checked='checked')
		.row
			.label Negar Recurso
			label.postform-style.ph-5
				input(type='radio' name='option' value='deny_appeal')
		.row
			.label Alterar Range
			label.postform-style.ph-5.mr-1
				input(type='radio' name='option' value='upgrade')
			select(name='upgrade')
				option(value='')
				option(value='1') Range Curto
				option(value='2') Range Longo
		.row
			.label Alterar Duração
			label.postform-style.ph-5.mr-1
				input(type='radio' name='option' value='edit')
			input(type='text' name='ban_duration' placeholder='Duração e.g. 7d' autocomplete='off')
	input(type='submit' value='submit')

